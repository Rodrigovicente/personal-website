---
interface Props {
	square?: boolean
}

const { square: isSquare } = Astro.props;
---

<div class:list={["hero-card", isSquare ? 'square' : '' ]}>
	<div>
		<slot />
	</div>
</div>
<style>
	.hero-card {
		position: relative;
		height: 15rem;
		display: flex;
		flex-grow: 1;
		align-items: center;
		padding: 1.25rem 1.6rem;
		border-radius: 1.375rem;
		/* border: 1px solid #DDE6F1; */
		border-radius: 22px;
		background: linear-gradient(180deg, #FFF 0%, #E5EAF3 80%);
		box-shadow: 0px 5px 10px -4px rgba(16, 39, 56, 0.03), 0px 0px 53.2px 3px #FFF inset;
		color: #25344D;
	}

	.hero-card.square {
		aspect-ratio: 1/1;
		flex-grow: 0;
	}
</style>
